<%- include('.././header.ejs') %>
<!-- I include the navbar from customer layout because they have the same navbar -->
<%- include('./../navbar.ejs') %>
    <div class="container">
        <div class="row">
            <% restaurants.forEach(restaurant => { %>
                <div class="col-md-4">
                    <a href="/restaurant-products/<%= restaurant._id %>" class="card mb-4 shadow-sm text-decoration-none">
                        <img src="/images/restaurant/<%= restaurant.lowername %>/banner/<%= restaurant.image %>" class="card-img-top" alt="<%= restaurant.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= restaurant.name %></h5>
                            <p class="card-text"><%= restaurant.address %></p>                         
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
    <script src="/js/customer/home.js"></script>            
<%- include('.././footer.ejs') %>
