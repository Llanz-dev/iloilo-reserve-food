<%- include('.././header.ejs') %>
<!-- I include the navbar from customer layout because they have the same navbar -->
<%- include('../customer/layout/navbar.ejs') %>
    <h2>Restaurants</h2>
    <div class="container">
        <div class="row">
            <% restaurant.forEach(restaurant => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="/images/restaurant/<%= restaurant.lowername %>/banner/<%= restaurant.image %>" class="card-img-top" alt="<%= restaurant.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= restaurant.name %></h5>
                            <p class="card-text"><%= restaurant.description %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/<%= restaurant.name %>/<%= restaurant._id %>" class="btn btn-sm btn-outline-secondary">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <script src="/js/customer/home.js"></script>            
<%- include('.././footer.ejs') %>
