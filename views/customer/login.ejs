<%- include('.././header.ejs') %>
<%- include('.././navbar.ejs') %>
<main id="authentication">
    <aside class="left">
        <img src="/images/static/login.jpg" alt="Cafe table" id="register-image">
    </aside>
    <section class="right">
        <h2 class="title">Login</h2>
        <form action="/login" method="post" id="login-form">          
            <div class="mb-3">
                <p class="error-field" id="error-username"></p>
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" placeholder="jhon321" name="username">
            </div>
            <div class="mb-3">
                <p class="error-field" id="error-password"></p>
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="******" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="mt-3">Don't have an account? <a href="/register">Register</a></p>
    </section>
</main>   
    
    <script src="/js/customer/login.js"></script>             
<%- include('.././footer.ejs') %>
