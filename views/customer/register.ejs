<%- include('.././header.ejs') %>
<%- include('./layout/navbar.ejs') %>
<!-- testing -->
    <div class="row">
        <div class="col-4">
            <img src="/images/static/register.jpg" alt="Cafe table" id="register-image">
        </div>
        <div class="col-8">
            <h2>Register</h2>
            <form action="/register" id="register-form" method="POST">
                <div class="mb-3">
                    <p class="error-field" id="error-username"></p>
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" placeholder="jhon321" name="username">
                </div>
                <div class="mb-3">
                    <p class="error-field" id="error-fullname"></p>
                    <label for="fullname" class="form-label">Fullname</label>
                    <input type="text" class="form-control" id="fullname" placeholder="Jhon Doe" name="fullname">
                </div>
                <div class="mb-3">
                    <p class="error-field" id="error-dateOfBirth"></p>
                    <label for="dateOfBirth" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth">
                </div>            
                <div class="mb-3">
                    <p class="error-field" id="error-password"></p>
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="******" name="password" minlength="6" maxlength="12">
                </div>
                <div class="mb-3">
                    <label for="reEnterPassword" class="form-label">Re-enter password</label>
                    <input type="password" class="form-control" id="reEnterPassword" placeholder="******" name="reEnterPassword">
                </div>            
                <button type="submit" class="btn btn-primary">register</button>
            </form>
            <p class="mt-3">Have already an account? <a href="/login">Login</a></p>

        </div>
    </div>  
    
    <script src="/js/customer/register.js"></script>            
<%- include('.././footer.ejs') %>